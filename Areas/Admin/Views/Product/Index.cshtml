@{
	int count = 1;
}

@model List<ProductViewModel>

<div class="container-fluid pt-4 px-4">
	<div class="col-sm-12 col-xl-12">
		<div class="bg-secondary rounded p-4">
			@if (Model.Count == 0)
			{
				<h3>No Product found</h3>
				<a asp-action="Create" asp-controller="Product">Create Product</a>
			}
			else
			{
				<h3>Products</h3>
				<a asp-action="Create" asp-controller="Product">Create</a>
				<table class="table">
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Description</th>
						<th scope="col">Category</th>
						<th scope="col">Price</th>
						<th scope="col">Actions</th>
					</tr>
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">@count</th>
							@if (@item.Name.Length > 15)
							{
								<td>@item.Name.Substring(0, 12)...</td>
							}
							else
							{
								<td>@item.Name</td>
							}
							@if (@item.Description.Length > 15)
							{
								<td>@item.Description.Substring(0, 12)...</td>
							}
							else
							{
								<td>@item.Description</td>
							}
							@if (@item.CategoryName.Length > 15)
							{
								<td>@item.CategoryName.Substring(0, 12)...</td>
							}
							else
							{
								<td>@item.CategoryName</td>
							}
							@if (@item.Price.ToString().Length > 15)
							{
								<td>@item.Price.ToString().Substring(0, 12)...</td>
							}
							else
							{
								<td>@item.Price</td>
							}
							<td>
								<a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">Details</a> |
								<a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edit</a> |
								<a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
							</td>
						</tr>
						count++;
					}
				</table>
			}
		</div>
	</div>
</div>

