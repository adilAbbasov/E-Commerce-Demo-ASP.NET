@model Product

@{
	var image = Model.ImageUrl.Split(@"\").Last();
	int count = 0;
}

<div class="container-fluid pt-4 px-4">
	<div class="col-sm-12 col-xl-12">
		<div class="bg-secondary rounded p-4 d-flex flex-column">
			<div>
				<h3>Details</h3>
			</div>
			<div class="d-flex flex-row">
				<div class="col-sm-12 col-xl-8">
					<div class="mb-2 font-weight-bold">
						Name: <span class="mx-1">@Model.Name</span>
					</div>
					<div class="mb-2">
						Description: <span class="mx-1">@Model.Description</span>
					</div>
					<div class="mb-2">
						Category: <span class="mx-1">@Model.Category.Name</span>
					</div>
					<div class="mb-2">
						Price: <span class="mx-1">@Model.Price</span>
					</div>
					<div class="mb-2">
						Tags:
						@foreach (var item in ViewBag.TagNames)
						{
							<span class="mx-1">@item</span>
							if (++count != ViewBag.TagNames.Count)
							{
								<span>|</span>
							}
						}
					</div>
				</div>
				<div class="col-sm-12 col-xl-4 mb-2">
					<div class="mb-3">Image</div>
					<img src="~/images/admin/@image" style="height: 150px;" alt="image" />
				</div>
			</div>
			<a asp-action="Index" asp-controller="Product">&#8592 Back to List</a>
		</div>
	</div>
</div>